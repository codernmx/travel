.swiper {
	height: 300rpx;
}

.swiper .wx-swiper-dot {
	width: 30rpx;
	height: 10rpx;
	border-radius: 10px;
	/* opacity: 0.5; */
}

.swiper .wx-swiper-dot-active {
	width: 30rpx;
	height: 10rpx;
	background-color: #fff;
	border-radius: 10rpx;
	/* opacity: 1; */
}

.swiperItem {
	height: 300rpx;
}

.swiperItem image {
	width: 100%;
	height: 300rpx;
}

.itemBox {
	display: flex;
	flex-wrap: wrap;
	margin-top: 30rpx;
}

.itemBox view {
	width: 25%;
	display: flex;
	flex-direction: column;
	text-align: center;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 30rpx;

	font-size: 26rpx;
	color: gray;
}

.itemBox view image {
	width: 50rpx;
	height: 50rpx;
}


.ad {
	margin: 30rpx;
	border-radius: 20rpx;
	overflow: hidden;
}